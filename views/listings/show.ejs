<% layout("/layouts/boilerplate.ejs") %>

<div class="container my-5 d-flex justify-content-center">
  <% if (!listing) { %>
    <div class="alert alert-danger text-center" role="alert">
      <h4>Listing not found!</h4>
      <p>The requested listing does not exist or has been deleted.</p>
      <a href="/listings" class="btn btn-primary mt-3">Go Back</a>
    </div>
  <% } else { %>

  <div class="card shadow-sm" style="max-width: 500px; width: 100%;">

    <% if (listing.image) { %>
      <img src="<%= listing.image %>" class="card-img-top listing-detail-img" alt="Listing image">
    <% } else { %>
      <img src="/images/default.jpg" class="card-img-top listing-detail-img" alt="Default image">
    <% } %>

    <div class="card-body">
      <h3 class="card-title mb-3 fw-bold"><%= listing.title || "Untitled Listing" %></h3>
      <p class="card-text"><%= listing.description || "No description available." %></p>

      <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item"><strong>Price:</strong> ₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></li>
        <li class="list-group-item"><strong>Location:</strong> <%= listing.location || "Unknown" %></li>
        <li class="list-group-item"><strong>Country:</strong> <%= listing.country || "Unknown" %></li>
      </ul>

      <div class="d-flex justify-content-between">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning px-4">Edit</a>

        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" onsubmit="return confirm('Are you sure you want to delete this listing?');">
          <button type="submit" class="btn btn-danger px-4">Delete</button>
        </form>
      </div>
    </div>

    <div class="col-8 offset-3 mb-3">
      <br>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="post">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
    <hr>

    <p><b>All Reviews</b></p>
    <div class="row">
      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3 border">
            <div class="card-body">
              <h5 class="card-title">User Review</h5>
              <p class="card-text"><%= review.comment || "No comment" %></p>
              <p class="card-text"><%= review.rating || "0" %> ★</p>
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="post">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        <% } %>
      <% } else { %>
        <p class="text-muted ms-3">No reviews yet.</p>
      <% } %>
    </div>

  </div>
  <% } %>
</div>
