<% layout("/layouts/boilerplate.ejs") %>
<script>
   const mapToken = "<%= process.env.MAP_TOKEN %>";
   const listing = "<%- JSON.stringify(listing)%>"
</script>

<div class="container my-5">

  <% if (!listing) { %>
    <div class="alert alert-danger text-center" role="alert">
      <h4>Listing not found!</h4>
      <p>The requested listing does not exist or has been deleted.</p>
      <a href="/listings" class="btn btn-primary mt-3">Go Back</a>
    </div>
  <% } else { %>

  <!-- MAIN LISTING CARD -->
  <div class="card shadow-sm mx-auto mb-5" style="max-width: 650px;">

    <% if (listing.image) { %>
      <img src="<%= listing.image.url %>" class="card-img-top listing-detail-img" alt="Listing image">
    <% } else { %>
      <img src="/images/default.jpg" class="card-img-top listing-detail-img" alt="Default image">
    <% } %>

    <div class="card-body">

      <!-- Owner -->
      <p class="text-muted">Owned by: <strong><%= listing.owner.username %></strong></p>

      <!-- Title -->
      <h2 class="fw-bold mb-3"><%= listing.title || "Untitled Listing" %></h2>

      <!-- Description -->
      <p class="mb-4"><%= listing.description || "No description available." %></p>

      <!-- Details -->
      <ul class="list-group list-group-flush mb-4 shadow-sm">
        <li class="list-group-item"><strong>Price:</strong> â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></li>
        <li class="list-group-item"><strong>Location:</strong> <%= listing.location || "Unknown" %></li>
        <li class="list-group-item"><strong>Country:</strong> <%= listing.country || "Unknown" %></li>
      </ul>

      <!-- Edit / Delete -->
      <% if (currUser && currUser._id.toString() === listing.owner._id.toString()) { %>
        <div class="d-flex justify-content-between">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning px-4">Edit</a>

          <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"
                onsubmit="return confirm('Are you sure you want to delete this listing?');">
            <button type="submit" class="btn btn-danger px-4">Delete</button>
          </form>
        </div>
      <% } %>

    </div>
  </div>

  <!-- REVIEW FORM -->
  <div class="card mx-auto shadow-sm p-4 mb-5" style="max-width: 650px;">
    <% if (currUser) { %>
      <h4 class="mb-3">Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="post">

        <!-- Rating -->
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot mb-3">
          <input type="radio" id="rate1" name="review[rating]" value="1" />
          <label for="rate1">1 star</label>
          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2">2 stars</label>
          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3">3 stars</label>
          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4">4 stars</label>
          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5">5 stars</label>
        </fieldset>

        <!-- Comment -->
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" rows="4" class="form-control mb-3" required></textarea>

        <button class="btn btn-dark w-100">Submit Review</button>
      </form>
    <% } %>
  </div>

  <!-- ALL REVIEWS -->
  <div class="card mx-auto shadow-sm p-4 mb-5" style="max-width: 650px;">
    <h4 class="mb-3">All Reviews</h4>

    <% if (listing.reviews && listing.reviews.length > 0) { %>
      <% for (let review of listing.reviews) { %>
        <div class="card p-3 mb-3 shadow-sm">
          <h5 class="card-title mb-1"><%= review.author.username %></h5>
          <p class="starability-result" data-rating="<%= review.rating || "0" %>"></p>
          <p class="card-text"><%= review.comment %></p>

          <% if (currUser && review.author._id.toString() === currUser._id.toString()) { %>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  method="post" class="mt-2">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          <% } %>
        </div>
      <% } %>
    <% } else { %>
      <p class="text-muted">No reviews yet.</p>
    <% } %>
  </div>

  <% } %>

  <!-- MAP SECTION (BOTTOM) -->
  <div class="card mx-auto shadow-sm p-4" style="max-width: 650px;">
    <h3 class="mb-3">Where you'll be</h3>
    <div id="map" style="height: 350px; border-radius: 10px;"></div>
  </div>

</div>
<script src="/js/map.js"></script>